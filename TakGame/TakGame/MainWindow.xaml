<Window x:Class="TakGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TakGame"
        WindowStartupLocation="CenterScreen" Background="#333333"
        Title="Tak" MinHeight="400" MinWidth="600" Height="600" Width="800">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="5*" MinHeight="250"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*" MinWidth="250"/>
        </Grid.ColumnDefinitions>

        <Canvas x:Name="BoardCanvas" Grid.Column="1" Grid.Row="1"/>

    </Grid>
</Window>
